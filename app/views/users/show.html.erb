<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<%= gravatar_for @user, size: 250, class: 'd-block' %>
<% if logged_in? and current_user == @user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: 'btn btn-outline-info' %>
  </div>
<% end %>
<% if @articles.any? %>
  <h3 class="text-center mt-4">Articles</h3>
  <div class="flickr_pagination text-center my-4">
    <%= will_paginate @articles %>
  </div>
  <%= render 'shared/articles', articles: @articles %>
  <div class="flickr_pagination text-center my-4">
    <%= will_paginate @articles %>
  </div>
<% end %>
