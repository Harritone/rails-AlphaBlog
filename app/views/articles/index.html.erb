<h1>Articles</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Descripton</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article|%>
      <tr>
        <td>
          <%= article.title %>
        </td>
        <td>
          <%= article.description %>
        </td>
        <td>
          <%= link_to 'show', article %>
          <%= link_to 'edit', edit_article_path(article) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
