<h1>Articles</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Descripton</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article|%>
      <tr>
        <td>
          <%= article.title %>
        </td>
        <td>
          <%= article.description %>
        </td>
        <td>
          <%= link_to 'Show', article %>
        </td>
        <td>
          <%= link_to 'Edit', edit_article_path(article) %>
        </td>
        <td>
          <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you shure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<br>
<%= link_to 'Add new article', new_article_path %>
