 <%= render 'shared/errors', obj: @article %>
<%= form_with(model: @article, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
  <div class="from-group row mb-2">
    <%= f.label :title, {class: 'col-2 col-form-label'} %>
    <div class="col-10">
      <%= f.text_field :title, {class: 'form-control shadow rounded', placeholder: 'Title of article'} %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, {class: 'col-2 col-form-label'} %>
    <div class="col-10">
      <%= f.text_area :description, {class: 'form-control shadow rounded', placeholder: 'Description', rows: 10 } %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :category, {class: 'col-2 col-form-label'} %>
    <div class="col-10">
      <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: 'Select category(can be empty) from the list below (use ctrl)'}, {multiple: true, size: 3, class: 'custom-select shadow rounded'}) %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit class: 'btn btn-outline-light btn-lg' %>
  </div>
<% end %>
</div>
<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: 'text-info' %>
</div>
