<h1 class="text-center mt4">Listing all categories</h1>
<div class="flickr_pagination text-center my-4">
  <%= will_paginate @articles %>
</div>
<% @categories.each do |category| %>
  <div class="row justify-content-center my-4">
    <div class="col-4">
      <div class="card shadow">
        <div class="card-body text-center">
          <h3><%= link_to category.name, category, class: 'text-success' %></h3>
        </div>
        <div class="card-footer bg-light text-center text-muted py-3">
          Created about <%= time_ago_in_words(category.created_at) %> ago, edited about <%= time_ago_in_words(category.updated_at) %> ago
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="flickr_pagination text-center my-4">
  <%= will_paginate @articles %>
</div>
