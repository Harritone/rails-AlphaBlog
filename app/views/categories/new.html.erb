<h1 class="text-center mt-4">Create new category</h1>
<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
  <div class="from-group row mb-2">
    <%= f.label :name, 'Category name', {class: 'col-2 col-form-label'} %>
    <div class="col-10">
      <%= f.text_field :name, {class: 'form-control shadow rounded', placeholder: 'name'} %>
    </div>
  </div>
  <div class="form-group row justify-content-center mt-4">
    <%= f.submit class: 'btn btn-outline-light btn-lg' %>
  </div>
<% end %>
</div>
<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: 'text-info' %>
</div>
